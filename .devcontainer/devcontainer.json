{
    "extensions": [
        "cschlosser.doxdocgen",
        "twxs.cmake",
        "sleistner.vscode-fileutils",
        "matangover.mypy",
        "ms-vscode.cmake-tools",
        "zfzackfrost.commentbars",
        "ryanluker.vscode-coverage-gutters",
        "llvm-vs-code-extensions.vscode-clangd",
        "cheshirekow.cmake-format",
        "psioniq.psi-header",
        "ms-python.python",
        "streetsidesoftware.code-spell-checker",
        "zainchen.json",
        "richie5um2.vscode-sort-json"
    ],
    "image": "registry.gitlab.com/mafanasiev/cpp-template:latest",
    "remoteUser": "user",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--privileged"
        // "--gpus=all" -- requires nvidia-container-runtime
    ],
    "workspaceFolder": "/home/user/src",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/user/src,type=bind"
}