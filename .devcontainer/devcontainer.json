{
    "customizations": {
        "vscode": {
            "settings": {
                "clangd.arguments": [
                    "--compile-commands-dir=/home/user/build/vscode"
                ],
                "clangd.path": "/usr/bin/clangd-14",
                "cmake.buildDirectory": "/home/user/build/vscode",
                "cmake.cmakePath": "/usr/bin/cmake",
                "cmake.configureOnOpen": true,
                "cmake.useCMakePresets": "auto",
                "cmakeFormat.exePath": "/usr/local/bin/cmake-format",
                "editor.formatOnSave": true,
                "python.formatting.provider": "black"
            }
        }
    },
    "extensions": [
        "cschlosser.doxdocgen",
        "twxs.cmake",
        "sleistner.vscode-fileutils",
        "ms-vscode.cmake-tools",
        "zfzackfrost.commentbars",
        "ryanluker.vscode-coverage-gutters",
        "llvm-vs-code-extensions.vscode-clangd",
        "cheshirekow.cmake-format",
        "psioniq.psi-header",
        "ms-python.python",
        "streetsidesoftware.code-spell-checker",
        "zainchen.json",
        "richie5um2.vscode-sort-json"
    ],
    "image": "mondaic/sed:pyrtdd",
    "remoteUser": "user",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--privileged"
    ],
    "workspaceFolder": "/home/user/src",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/user/src,type=bind"
}