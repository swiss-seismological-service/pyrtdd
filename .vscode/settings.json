{
    "cSpell.ignorePaths": [
        ".devcontainer",
        ".vscode",
        ".cmake-format.yaml"
    ],
    "clangd.arguments": [
        "--compile-commands-dir=/home/user/build/vscode"
    ],
    "clangd.path": "/usr/bin/clangd-14",
    "cmake.buildDirectory": "/home/user/build/vscode",
    "cmake.cmakePath": "/usr/bin/cmake",
    "cmake.configureOnOpen": true,
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "True"
    },
    "cmake.environment": {
        "CPM_SOURCE_CACHE": "/home/user/.cpm_cache"
    },
    "cmake.useCMakePresets": "auto",
    "cmakeFormat.exePath": "/usr/local/bin/cmake-format",
    "editor.formatOnSave": true,
    "python.formatting.provider": "black"
}